-- RTX Graphics Enhancement Function
local function applyRTXEffects()
    -- Enable advanced lighting technology for RTX-like rendering
    Lighting.Technology = Enum.Technology.ShadowMap
    Lighting.GlobalShadows = true
    
    -- Enhanced atmosphere for RTX feel
    local atmosphere = Lighting:FindFirstChild("Atmosphere") or Instance.new("Atmosphere")
    atmosphere.Parent = Lighting
    atmosphere.Density = 0.4
    atmosphere.Offset = 0.3
    atmosphere.Color = Color3.new(0.8, 0.8, 0.9)
    atmosphere.Decay = Color3.new(0.4, 0.5, 0.75)
    atmosphere.Glare = 0.3
    atmosphere.Haze = 2.2
    
    -- RTX-style post-processing effects
    local bloom = Lighting:FindFirstChild("BloomEffect") or Instance.new("BloomEffect")
    bloom.Parent = Lighting
    bloom.Intensity = 0.8
    bloom.Size = 56
    bloom.Threshold = 0.6
    
    local colorCorrect = Lighting:FindFirstChild("ColorCorrectionEffect") or Instance.new("ColorCorrectionEffect")
    colorCorrect.Parent = Lighting
    colorCorrect.Saturation = 0.3
    colorCorrect.Contrast = 0.15
    colorCorrect.Brightness = 0.08
    colorCorrect.TintColor = Color3.new(1.05, 1.02, 1.0)
    
    local sunRays = Lighting:FindFirstChild("SunRaysEffect") or Instance.new("SunRaysEffect")
    sunRays.Parent = Lighting
    sunRays.Intensity = 0.4
    sunRays.Spread = 0.6
    
    -- Depth of Field for cinematic RTX effect
    local depthOfField = Lighting:FindFirstChild("DepthOfFieldEffect") or Instance.new("DepthOfFieldEffect")
    depthOfField.Parent = Lighting
    depthOfField.FarIntensity = 0.15
    depthOfField.FocusDistance = 60
    depthOfField.InFocusRadius = 25
    depthOfField.NearIntensity = 0.25
end

-- RTX Texture Enhancement for realistic graphics
local function enhancePartsWithRTX()
    spawn(function()
        -- Enhanced material properties for RTX-like appearance
        for _, obj in pairs(workspace:GetDescendants()) do
            if obj:IsA("BasePart") then
                -- Apply realistic materials and properties
                if obj.Material == Enum.Material.Plastic then
                    obj.Material = Enum.Material.SmoothPlastic
                elseif obj.Material == Enum.Material.Concrete then
                    obj.Material = Enum.Material.Concrete
                elseif obj.Material == Enum.Material.Brick then
                    obj.Material = Enum.Material.Brick
                end
                
                -- Enhanced reflectance for metallic surfaces
                if obj.Material == Enum.Material.Metal or obj.Material == Enum.Material.CorrodedMetal then
                    obj.Reflectance = math.min(obj.Reflectance + 0.3, 0.8)
                end
                
                -- Add realistic surface appearance
                local surfaceGui = obj:FindFirstChild("RTXSurface")
                if not surfaceGui then
                    -- Enhanced surface properties for RTX look
                    if obj.Material == Enum.Material.Wood then
                        obj.BrickColor = BrickColor.new("Dark orange")
                    elseif obj.Material == Enum.Material.Sand then
                        obj.BrickColor = BrickColor.new("Bright yellow")
                    end
                end
            elseif obj:IsA("Texture") or obj:IsA("Decal") then
                -- Enhance texture transparency and color for realism
                obj.Transparency = math.max(obj.Transparency - 0.1, 0)
                if obj.Color3 then
                    obj.Color3 = Color3.new(
                        math.min(obj.Color3.R * 1.1, 1),
                        math.min(obj.Color3.G * 1.1, 1),
                        math.min(obj.Color3.B * 1.1, 1)
                    )
                end
            end
        end
    end)
end

