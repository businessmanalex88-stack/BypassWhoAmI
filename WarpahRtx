-- Warpah RTX Graphics Enhancement Script for Delta Executor
-- Professional weather & lighting system with RTX-style realistic graphics

local Players = game:GetService("Players")
local Lighting = game:GetService("Lighting")
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Forward declarations
local clearWeatherEffects, createRainEffect, createSnowEffect

-- Clear weather effects
clearWeatherEffects = function()
    local rainFolder = workspace:FindFirstChild("WarpahRain")
    if rainFolder then rainFolder:Destroy() end
    
    local snowFolder = workspace:FindFirstChild("WarpahSnow")
    if snowFolder then snowFolder:Destroy() end
end

-- Rain Particle System - FIXED
createRainEffect = function()
    local rainFolder = workspace:FindFirstChild("WarpahRain")
    if rainFolder then rainFolder:Destroy() end
    
    rainFolder = Instance.new("Folder")
    rainFolder.Name = "WarpahRain"
    rainFolder.Parent = workspace
    
    for i = 1, 50 do
        local rainDrop = Instance.new("Part")
        rainDrop.Name = "RainDrop" .. i
        rainDrop.Size = Vector3.new(0.1, 2, 0.1)
        rainDrop.Material = Enum.Material.ForceField
        rainDrop.BrickColor = BrickColor.new("Light blue")
        rainDrop.Transparency = 0.3
        rainDrop.CanCollide = false
        rainDrop.Anchored = true
        rainDrop.Parent = rainFolder
        
        -- Position rain randomly in sky
        rainDrop.Position = Vector3.new(
            math.random(-200, 200),
            math.random(100, 200),
            math.random(-200, 200)
        )
        
        -- Rain falling animation - FIXED
        spawn(function()
            while rainDrop.Parent and rainFolder.Parent do
                rainDrop.Position = rainDrop.Position - Vector3.new(0, 2, 0)
                if rainDrop.Position.Y < -10 then
                    rainDrop.Position = Vector3.new(
                        math.random(-200, 200),
                        math.random(100, 200),
                        math.random(-200, 200)
                    )
                end
                wait(0.1)
            end
        end)
    end
end

-- Snow Particle System - FIXED
createSnowEffect = function()
    local snowFolder = workspace:FindFirstChild("WarpahSnow")
    if snowFolder then snowFolder:Destroy() end
    
    snowFolder = Instance.new("Folder")
    snowFolder.Name = "WarpahSnow"
    snowFolder.Parent = workspace
    
    for i = 1, 80 do
        local snowFlake = Instance.new("Part")
        snowFlake.Name = "SnowFlake" .. i
        snowFlake.Size = Vector3.new(0.3, 0.3, 0.3)
        snowFlake.Shape = Enum.PartType.Ball
        snowFlake.Material = Enum.Material.Neon
        snowFlake.BrickColor = BrickColor.new("Institutional white")
        snowFlake.Transparency = 0.2
        snowFlake.CanCollide = false
        snowFlake.Anchored = true
        snowFlake.Parent = snowFolder
        
        -- Position snow randomly in sky
        snowFlake.Position = Vector3.new(
            math.random(-150, 150),
            math.random(80, 150),
            math.random(-150, 150)
        )
        
        -- Snow falling animation with drift - FIXED
        spawn(function()
            local driftX = math.random(-1, 1) * 0.5
            local driftZ = math.random(-1, 1) * 0.5
            while snowFlake.Parent and snowFolder.Parent do
                snowFlake.Position = snowFlake.Position + Vector3.new(driftX, -0.8, driftZ)
                if snowFlake.Position.Y < -5 then
                    snowFlake.Position = Vector3.new(
                        math.random(-150, 150),
                        math.random(80, 150),
                        math.random(-150, 150)
                    )
                    driftX = math.random(-1, 1) * 0.5
                    driftZ = math.random(-1, 1) * 0.5
                end
                wait(0.15)
            end
        end)
    end
end

